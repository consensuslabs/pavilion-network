                "createdAt": {
                    "type": "string"
                },
                "fileCid": {
                    "type": "string"
                },
                "filePath": {
                    "type": "string"
                },
                "format": {
                    "description": "\"hls\" or \"mp4\"",
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "resolution": {
                    "description": "e.g., \"720\", \"480\", \"360\"",
