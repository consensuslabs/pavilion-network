                    "type": "string"
                },
                "percentage": {
                    "type": "number"
                },
                "startTime": {
                    "type": "string"
                }
            }
        },
        "video.StatusResponse": {
            "type": "object",
            "properties": {
                "completedAt": {
                    "type": "string"
                },
                "currentPhase": {
                    "type": "string"
                },
                "errorMessage": {
                    "type": "string"
                },
                "estimatedDuration": {
                    "type": "string"
                },
                "fileId": {
                    "type": "string"
                },
                "ipfsProgress": {
                    "$ref": "#/definitions/video.Progress"
                },
                "s3Progress": {
                    "$ref": "#/definitions/video.Progress"
                },
                "status": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "totalProgress": {
                    "type": "number"
                },
                "totalSize": {
                    "type": "integer"
