        "/video/upload": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Upload a new video file",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "video"
                ],
                "summary": "Upload video",
                "parameters": [
                    {
                        "type": "file",
                        "description": "Video file to upload (.mp4, .mov, .avi, .webm)",
                        "name": "video",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "maxLength": 100,
                        "minLength": 3,
                        "type": "string",
                        "description": "Video title (3-100 characters)",
                        "name": "title",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "maxLength": 500,
                        "type": "string",
                        "description": "Video description (max 500 characters)",
                        "name": "description",
                        "in": "formData"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Upload initiated successfully",
                        "schema": {
                            "allOf": [
