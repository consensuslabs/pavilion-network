            "properties": {
                "transcodeSegments": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/video.TranscodeSegment"
                    }
                },
                "transcodes": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/video.Transcode"
                    }
                }
            }
        },
        "video.TranscodeSegment": {
            "type": "object",
            "properties": {
                "createdAt": {
                    "type": "string"
                },
                "duration": {
                    "type": "number"
                },
                "fileCid": {
                    "type": "string"
                },
                "filePath": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "sequence": {
                    "type": "integer"
                },
                "storageType": {
                    "description": "\"ipfs\" or \"s3\"",
                    "type": "string"
                },
                "transcodeId": {
                    "type": "integer"
                }
            }
        },
        "video.UploadResponse": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
